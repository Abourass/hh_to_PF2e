{
  "_comment": "Pipeline v2.0 - Now with unified checkpoint system (.pipeline_state.json)",
  "input": "harbinger_house.pdf",
  "output_root": "converted_harbinger_house",
  "dpi": 800,
  "parallel_jobs": 12,

  "preprocessing": {
    "_comment": "Moderate preprocessing - best balance of cleanup without introducing artifacts. Tested: 156 low-conf words at 37.0% avg (vs 167/35.8% minimal, 205/33.5% aggressive)",
    "enabled": true,
    "deskew": true,
    "deskew_threshold": 40,
    "despeckle": true,
    "contrast_stretch": "3%x3%",
    "level": "12%,88%,1.1",
    "morphology": null
  },

  "interactive_preprocessing": {
    "_comment": "Manual column selection and image cleanup for improved OCR accuracy. Set enabled:true to activate.",
    "enabled": true,
    "auto_open_browser": true,
    "preserve_originals": true
  },
  
  "ocr": {
    "_comment": "PSM 6 = single uniform block (better for scanned pages), OEM 1 = LSTM only (more accurate than legacy fallback)",
    "engine": "tesseract",
    "language": "eng",
    "psm": 6,
    "oem": 1,
    "confidence_threshold": 60,
    "output_confidence_report": true,
    "user_words": "planescape_words.txt",
    "reprocess_threshold": 20
  },
  
  "cleanup": {
    "encoding": true,
    "dictionary": true,
    "ai_backend": "claude"
  },
  
  "chapters": [
    {
      "name": "intro",
      "pages": "3-11",
      "description": "Introduction and background"
    },
    {
      "name": "chapter1_the_Streets_of_Sigil",
      "pages": "12-31",
      "description": "The Harbinger House location and inhabitants"
    },
    {
      "name": "chapter2_the_outlands",
      "pages": "32-45",
      "description": "The plot unfolds"
    },
    {
      "name": "chapter3_harbinger_house",
      "pages": "46-64",
      "description": "Pursuit across Sigil"
    }
  ],
  
  "statblock_detection": {
    "enabled": true,
    "output_format": "markdown",
    "systems": ["ad&d2e"],
    "extract_to_separate_files": true
  },
  
  "planescape_dictionary": {
    "terms": [
      "berk", "berks", "basher", "bashers", "cutter", "cutters",
      "blood", "bloods", "barmy", "barmies", "factol", "factols",
      "dabus", "tanar'ri", "baatezu", "yugoloth", "yugoloths",
      "Sigil", "the Cage", "multiverse", "planewalker", "planewalkers"
    ],
    "factions": [
      "Godsmen", "Believers of the Source",
      "Harmonium", "Hardhead", "Hardheads", 
      "Mercykiller", "Mercykillers", "Red Death",
      "Guvner", "Guvners", "Fraternity of Order",
      "Xaositect", "Xaositects", "Chaosmen",
      "Athar", "Defiers", "Lost",
      "Bleak Cabal", "Bleakers", "Madmen",
      "Doomguard", "Sinkers",
      "Dustmen", "Dead",
      "Fated", "Heartless", "Takers",
      "Free League", "Indeps",
      "Revolutionary League", "Anarchists",
      "Sign of One", "Signers",
      "Society of Sensation", "Sensates",
      "Transcendent Order", "Ciphers"
    ]
  }
}
