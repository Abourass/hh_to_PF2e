{
  "name": "harbinger-house",
  "version": "2.0.0",
  "description": "PDF to Markdown conversion pipeline for tabletop RPG books with interactive preprocessing",
  "private": true,
  "scripts": {
    "install:all": "pnpm install",
    "dev": "pnpm --parallel --stream --filter './interactive-*' run dev",
    "dev:server": "pnpm --filter interactive-server dev",
    "dev:ui": "pnpm --filter interactive-preprocessing dev",
    "build:ui": "pnpm --filter interactive-preprocessing build",
    "start:server": "pnpm --filter interactive-server start",
    "interactive": "fish ./interactive_preprocessing_server.fish",
    "convert": "./harbinger_master.fish --config pipeline_config.json",
    "convert:demo": "./harbinger_master.fish --config pipeline_config.json --demo",
    "convert:clean": "./harbinger_master.fish --config pipeline_config.json --clean",
    "convert:resume": "./harbinger_master.fish --config pipeline_config.json --resume",
    "convert:ai": "./harbinger_master.fish --config pipeline_config.json --ai-claude",
    "status": "./harbinger_master.fish --config pipeline_config.json --status",
    "quality-check": "./ocr_quality_checker.fish converted_harbinger_house/final/*.md",
    "merge": "./merge_chapters.fish converted_harbinger_house",
    "extract-statblocks": "./extract_statblocks.fish",
    "help": "./harbinger_master.fish"
  },
  "keywords": [
    "pdf",
    "ocr",
    "markdown",
    "rpg",
    "dnd",
    "planescape",
    "conversion",
    "interactive",
    "preprocessing"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Abourass/hh_to_PF2e.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
